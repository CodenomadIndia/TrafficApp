<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="ID Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="41dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:id="@+id/idNumber"
        android:background="@drawable/border"/>

    <Button
        android:text="Load Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loadProfile"
        android:background="#0073AE"
        android:fontFamily="fonts/Montserrat-Light.ttf"
        android:textColor="#FFF"
        android:layout_marginTop="24dp"
        android:textAllCaps="false"
        android:layout_below="@+id/idNumber"
        />

    <TextView
        android:text="Learner Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="fonts/Montserrat-Light.ttf"
        android:id="@+id/textView"
        android:layout_marginRight="282dp"
        android:layout_marginEnd="282dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/idNumber"
        android:layout_toStartOf="@+id/idNumber"
        android:layout_centerInParent="true"/>

</RelativeLayout>